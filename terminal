# Rename all cursor.language files to their base names
for file in cursor.*; do
    if [[ $file == cursor.* ]]; then
        mv "$file" "${file#cursor.}"
    fi
done

# Stage all changes
git add .

# Create commit for all staged files
git commit -m "refactor: rename configuration files for clarity

- Rename .cursorrules to cursorrules
- Simplify language file names by removing cursor. prefix
- Update repository structure for better maintainability"